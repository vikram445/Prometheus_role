pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/vikram445/Prometheus_role.git'   
        INSTALL_WORKSPACE = "/var/lib/jenkins/workspace/Prometheus_role"
    }

    stages {
        stage('Clone Repository') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: "${REPO_URL}"]]])
            }
        }

        stage('List Active Prometheus Servers') {
            steps {
                sh "ansible-inventory --graph"
            }
        }

        stage('Install Prometheus') {
            steps {
                sh "ansible-playbook ${env.INSTALL_WORKSPACE}/Prometheus_role/tests/test.yml --tags 'prometheus_grafana-01'"
            }
        }

        stage('Install Alertmanager') {
            steps {
                sh "ansible-playbook ${env.INSTALL_WORKSPACE}/alertmanager_role/tests/test.yml --tags 'alertmanager'"
            }
        }

        stage('Install Node Exporter') {
            steps {
                sh "ansible-playbook ${env.INSTALL_WORKSPACE}/node_exp_role/tests/test.yml --tags 'node_exp'"
            }
        }
     }

        post {
            success {
                echo 'Succeeded!'
            }
            failure {
                echo 'Failed!'
            }
        }
    }
